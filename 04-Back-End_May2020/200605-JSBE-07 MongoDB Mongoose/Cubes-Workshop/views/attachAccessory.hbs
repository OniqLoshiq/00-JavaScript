<h1>Attach a new accessory</h1>
<div class="form">
  <h2>{{name}}</h2>
  <img class="cube" src="{{imageUrl}}">
  {{#if hasAllAccessories}}
  <h3 class="italic">This cube has all available accessories so far or there is no available at all...</h3>
  {{else}}
  <form action="/accessory/attach/{{_id}}" method="POST">
    <label for="accessory">Accessories</label>
    <select id="accessory" name="accessory">
      {{#each accessoriesToList}}
      <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
    <input type="submit" value="Attach">
  </form>
  {{/if}}
  <a class="btn" href="/cube/details/{{_id}}">Back</a>
</div>